@using Blog.Blazor.Models.hexo
@using Blog.Blazor.Services
<div class="card">
    <div class="card-header">
        标签云
    </div>
    <div class="card-body">
        @foreach (var item in tags)
        {
            <Tag Href=@(item.Key.Id) Size=@(item.Value.Count()) >@(item.Key.Name)</Tag>
        }
    </div>
</div>
@inject HexoService hexo
@code {
    private IReadOnlyDictionary<Category, IEnumerable<Post>> tags;
    protected override void OnInitialized()
    {
        tags = hexo.GetTagPostsDict();
    }
}

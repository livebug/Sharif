@using Blog.Blazor.Models.hexo
@using Blog.Blazor.Services
<h3>ArticleList</h3>


<table class="table">
    <thead>
        <tr>
            <th>Title     </th>
            <th>Tags      </th>
            <th>Content</th>
            <th>Updatedtime  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in posts)
        {
            <tr>
                <td>@(post.Title)      </td>
                <td>
                    @foreach (var tag in new string[]{"#tag1","#tag2"})
                        {
                        <Tag>@tag</Tag>
                    }
                </td>
                <td>@(post.Content) </td>
                <td>@(post.Updated)   </td>
            </tr>
        }
    </tbody>
</table>

@inject HexoService hexo
@code {
    public Post[] posts;

    protected override void OnInitialized()
    {
        posts = hexo.GetAllPosts();
    }
}

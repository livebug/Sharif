@page "/articles/{id?}"
@using Blog.Blazor.Pages.Article
<h1>Articles</h1> 

@if (HasID && post is not null)
{
    <ArticleContent post=post></ArticleContent>
}
else
{
    <ArticleList></ArticleList>
}

@inject Blog.Blazor.Services.HexoService hexo
@code {
    [Parameter]
    public string Id { get; set; }

    public bool HasID = true;

    public Blog.Blazor.Models.hexo.Post post { get; set; }

    protected override void OnParametersSet()
    {
        // 如果 Id为空则展示文章列表
        // 否则 根据Id查询相应文章，展示文章内容
        if (string.IsNullOrWhiteSpace(Id))
        {
            HasID = false;
        }

        if (HasID)
        {
            post = hexo.GetAllPosts().First(e => e.Id == Id);
        }
        else
        {
        }
    }
}
